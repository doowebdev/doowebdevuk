{% extends "admin/layout/master.twig" %}

{% block content %}
    <!-- Main bar -->
    <div class="mainbar">

        <!-- Page heading -->
        <div class="page-head">
            <h2 class="pull-left"><i class="fa fa-home"></i> Settings</h2>

            <div class="clearfix"></div>

        </div>
        <!-- Page heading ends -->


        <!-- Matter -->

        <div class="matter">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">

                         {% if socialUsernameMsg %}
                            {% for msg in socialUsernameMsg %}
                                {{ msg.content }}
                            {% endfor %}
                        {% endif %}

                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">Social Media Usernames - General Settings</div>
                                <div class="widget-icons pull-right">
                                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                    <!--<a href="#" class="wclose"><i class="fa fa-times"></i></a>-->
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="widget-content">
                                <div class="padd">

                                    <!-- Content -->

                                    <!-- Form starts.  -->
                                    <form class="admin-ajax form-horizontal" role="form" action="{{ url('socialUsername') }}" method ="post">

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">https://facebook.com/</label>
                                            <div class="col-lg-5">
                                                <input type="text" class="form-control" name ="facebook_user" value ="{% if social_username.facebook_user %}{{ social_username.facebook_user }}{% endif %}">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">https://twitter.com/</label>
                                            <div class="col-lg-5">
                                                <input type="text" class="form-control" name ="twitter_user" value ="{% if social_username.twitter_user %}{{ social_username.twitter_user }}{% endif %}">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label"></label>
                                            <div class="col-lg-5">
                                                <input type="hidden" name="token" value="{{ token }}">
                                                <p><input type="submit" value ="Submit" name ="social_submit" class="btn btn-primary"></p>

                                                <p><div id="response"></div></p>
                                            </div>
                                        </div>

                                    </form>
                                    <!-- End content -->

                                </div>
                                <div class="widget-foot">
                                    <!-- Footer goes here -->
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- Matter ends -->

    </div>

    <!-- Mainbar ends -->
    <div class="clearfix"></div>

    </div>
    <!-- Content ends -->


{% endblock %}

{% block sidebar %}
    {% include "admin/layout/side.twig" %}
{% endblock  %}