{% extends "admin/layout/master.twig" %}

{% block content %}
<!-- Main bar -->
<div class="mainbar">

    <!-- Page heading -->
    <div class="page-head">
        <h2 class="pull-left"><i class="fa fa-home"></i> {{ 'GENERAL_SETTINGS'|trans }}</h2>

        <div class="clearfix"></div>

    </div>
    <!-- Page heading ends -->


    <!-- Matter -->

    <div class="matter">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    {% if siteMetasMsg %}
                        {% for msg in  siteMetasMsg %}
                            {{ msg.content }}
                        {% endfor %}
                    {% endif %}

                    {% for formMsg in adminFormErrorMessages %}
                        <ul>
                            {% if formMsg.site_meta_title %}<li>{{ formMsg.site_meta_title }}</li>{% endif %}
                            {% if formMsg.site_meta_description %}<li>{{ formMsg.site_meta_description }}</li>{% endif %}
                            {% if formMsg.site_meta_keywords %}<li>{{ formMsg.site_meta_keywords }}</li>{% endif %}
                        </ul>
                    {% endfor %}

                    <div class="widget">
                        <div class="widget-head">
                            <div class="pull-left">{{ 'SITE_META_TAG_MAIN_TITLE'|trans }}</div>
                            <div class="widget-icons pull-right">
                                <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                <!--<a href="#" class="wclose"><i class="fa fa-times"></i></a>-->
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="widget-content">
                            <div class="padd">

                                <!-- Content -->
                                <div class="widget-content">
                                    <div class="padd">

                                        <br />
                                        <!-- Form starts.  -->
                                        <form class="admin-ajax form-horizontal" role="form" action="{{ url('siteMetas') }}" method ="post">

                                           <input type="hidden" name="id" value="1"/>
                                            <div class="form-group">
                                                <label class="col-lg-2 control-label">{{ 'SITE_META_TAG_TITLE'|trans }}</label>
                                                <div class="col-lg-5">
                                                    <input class="form-control" type="text" name ="site_meta_title" value ="{% if siteMetaDetails.title %}{{ siteMetaDetails.title }}{% endif %}">

                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-lg-2 control-label">{{ 'SITE_META_TAG_DESCRIPTION_TITLE'|trans }}</label>
                                                <div class="col-lg-5">
                                                    <textarea class="form-control" name="site_meta_description" id="" cols="10" rows="10"> {% if siteMetaDetails.description %}{{ siteMetaDetails.description }}{% endif %}</textarea>

                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-lg-2 control-label">{{ 'SITE_META_TAG_KEYWORDS_TITLE'|trans }}</label>
                                                <div class="col-lg-5">
                                                    <textarea class="form-control" name="site_meta_keywords" id="" cols="10" rows="10"> {% if siteMetaDetails.keywords %}{{ siteMetaDetails.keywords }}{% endif %}</textarea>
                                                    <input type="hidden" name="token" value="{{ token }}">


                                                    <p><input type="submit" value ="{{ 'SITE_META_TAG_SUBMIT_TITLE'|trans }}" name ="site-details_submit" class="btn btn-primary"></p>

                                                    <p><div id="response"></div></p>

                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <!-- End content -->

                            </div>
                            <div class="widget-foot">
                                <!-- Footer goes here -->
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Matter ends -->

</div>

<!-- Mainbar ends -->
<div class="clearfix"></div>

</div>

{% endblock %}

 {% block sidebar %}
     {% include "admin/layout/side.twig" %}
 {% endblock  %}
