{% extends "admin/layout/master.twig" %}

{% block content %}
    <!-- Main bar -->
    <div class="mainbar">

        <!-- Page heading -->
        <div class="page-head">
            <h2 class="pull-left"><i class="fa fa-home"></i> Settings</h2>

            <div class="clearfix"></div>

        </div>
        <!-- Page heading ends -->


        <!-- Matter -->

        <div class="matter">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">

                        {{ flash['comment-keys-updated'] }}

                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">Disqus Comment API keys</div>
                                <div class="widget-icons pull-right">
                                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                    <!--<a href="#" class="wclose"><i class="fa fa-times"></i></a>-->
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="widget-content">
                                <div class="padd">

                                    <!-- Content -->
                                    <!-- Form starts.  -->
                                    <form class="admin-ajax form-horizontal" role="form" action="{{ siteUrl('/admin-area/comment-box') }}" method ="post">

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Disqus Secret API Key:</label>
                                            <div class="col-lg-5">
                                                <textarea class="form-control" cols="10" rows="5" type="text" name ="disqus_secret_key">{% if comment.secret_key %}{{ comment.secret_key }}{% endif %}</textarea>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Disqus API Key:</label>
                                            <div class="col-lg-5">
                                                <textarea class="form-control" cols="10" rows="5" type="text" name ="disqus_public_key">{% if comment.public_key %}{{ comment.public_key }}{% endif %}</textarea>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Disqus Shortname:</label>
                                            <div class="col-lg-5">
                                                <input class="form-control" type="text" id="right-label" name ="disqus_shortname" value ="{% if comment.shortname %}{{ comment.shortname }}{% endif %}">

                                                <p><input type="submit" value ="Submit" name ="disqus_settings_submit" class="btn btn-primary"></p>

                                            </div>
                                        </div>

                                        <input type="hidden" name="token" value="{{ token }}">

                                    </form>

                                    <!-- End content -->

                                </div>
                                <div class="widget-foot">
                                    <!-- Footer goes here -->
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- Matter ends -->

    </div>

    <!-- Mainbar ends -->
    <div class="clearfix"></div>

    </div>
    <!-- Content ends -->

{% endblock %}


{% block sidebar %}
    {% include "admin/layout/side.twig" %}
{% endblock  %}