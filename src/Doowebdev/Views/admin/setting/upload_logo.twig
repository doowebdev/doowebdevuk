{% extends "admin/layout/master.twig" %}

{% block content %}
<!-- Main bar -->
<div class="mainbar">

    <!-- Page heading -->
    <div class="page-head">
        <h2 class="pull-left"><i class="fa fa-home"></i> Settings</h2>

        <div class="clearfix"></div>

    </div>
    <!-- Page heading ends -->


    <!-- Matter -->

    <div class="matter">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                     {% if uploadLogoMsg %}
                        {% for msg in uploadLogoMsg %}
                            {{ msg.content }}
                        {% endfor %}
                    {% endif %}

                    <div class="widget">
                        <div class="widget-head">
                            <div class="pull-left">Upload Logo</div>
                            <div class="widget-icons pull-right">
                                <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                <!--<a href="#" class="wclose"><i class="fa fa-times"></i></a>-->
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="widget-content">
                            <div class="padd">

                                <!-- Content -->

                                <form id="upload_form" enctype="multipart/form-data" method="post" action="{{ url('uploadLogo') }}">
                                    <input type="file" name="file_logo" id="file_logo"><br/>
                                    <input class ="btn btn btn-primary" type="submit" name="upload_logo_submit" value="Upload Logo">
                                </form>

                                <!-- End content -->

                            </div>
                            <div class="widget-foot">
                                <!-- Footer goes here -->
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Matter ends -->

</div>

<!-- Mainbar ends -->
<div class="clearfix"></div>

</div>
<!-- Content ends -->

{% endblock %}

{% block sidebar %}
     {% include "admin/layout/side.twig" %}
{% endblock  %}
