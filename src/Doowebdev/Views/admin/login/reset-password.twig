{% extends "admin/layout/master-login.twig" %}

{% block content %}

    <div class="container">
        <div class="row">
            <form role="form" class ="admin-ajaxv login-form form-horizontal" action="{{ siteUrl('/reset-password') }}" method="post">

                <h3>{{ 'RESET_PASSWORD_MAIN_TITLE'|trans }}</h3>

                <div class="form-group">
                    <label>{{ 'RESET_EMAIL_TITLE'|trans }} </label>
                    <input type="text" name="email" class="form-control">
                </div>

                <div class="form-group">
                    <label> {{ 'RESET_CODE_TITLE'|trans }} </label>
                    <input type="text" name="code" class="form-control">
                </div>

                <div class="form-group">
                    <label>{{ 'RESET_NEW_PASSWORD_TITLE'|trans }} </label>
                    <input type="password" name="password" class="form-control">
                </div>

                <div class="form-group">
                    <label>{{ 'RESET_NEW_PASSWORD_REPEAT_TITLE'|trans }} </label>
                    <input type="password" name="password-repeat" class="form-control">
                </div>

                <input type="hidden" name="token" value="{{ token }}">
                <input type="submit" name="reset_submit" value="{{ 'RESET_SUBMIT_TITLE'|trans }}" class="btn btn-primary" />

                <p>{{ flash['resetPassword-msg']|raw }}</p>

            </form>
        </div>
    </div>

{% endblock %}