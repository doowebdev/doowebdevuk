{% extends "admin/layout/master.twig" %}

{% block content %}


    <!-- Main bar -->
    <div class="mainbar">

        <!-- Page heading -->
        <div class="page-head">
            <h2 class="pull-left"><i class="fa fa-home"></i> Commission Junction</h2>

            <div class="clearfix"></div>

        </div>
        <!-- Page heading ends -->


        <!-- Matter -->

        <div class="matter">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">

                        {{ flash['deleted'] }}
                        <br>
                        {{ flash['deleted-where'] }}

                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">All Categories</div>
                                <div class="widget-icons pull-right">
                                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                    <!--<a href="#" class="wclose"><i class="fa fa-times"></i></a>-->
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="widget-content">
                                <div class="padd">
                                    <!-- Content goes here -->

                                    <!-- Table Page -->
                                    <div class="page-tables">
                                        <!-- Table -->
                                        <div class="table-responsive">
                                            <table cellpadding="0" cellspacing="0" border="0" id="data-table" width="100%">
                                                <thead>
                                                <tr>
                                                    <th width="200">ID</th>
                                                    <th>Category</th>
                                                    <th>Advertiser</th>
                                                    <th></th>
                                                    <th></th>
                                                </tr>
                                                </thead>
                                                <tbody>

                                                {% for cat in categories %}
                                                    <tr>
                                                        <td>{{ cat.id }}</td>
                                                        <td>{{ cat.category }}</td>
                                                        <td>{{ cat.merchant }}</td>
                                                        <td>
                                                            <a href="{{ siteUrl('/admin-area/category') }}/{{ cat.id }}/edit" class="btn btn-xs btn-default" role="button"><i class="fa fa-pencil"></i></a>

                                                            <a href="{{ siteUrl('/admin-area/category') }}/{{ cat.id }}/delete" class="btn btn-xs btn-danger" role="button" onclick="return confirm('Are you sure? The Category and ALL Items in this category will be deleted')"><i class="fa fa-trash-o"></i></a>
                                                        </td>
                                                    </tr>
                                                {% endfor %}

                                                </tbody>
                                            </table>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                    <!-- End table -->

                                </div>
                                <div class="widget-foot">
                                    <!-- Footer goes here -->
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>

        <!-- Matter ends -->


    </div>

    <!-- Mainbar ends -->
    <div class="clearfix"></div>

    </div>
    <!-- Content ends -->


{% endblock %}


{% block sidebar %}
    {% include "admin/layout/side.twig" %}
{% endblock  %}
