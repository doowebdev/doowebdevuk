{% extends "admin/layout/master.twig" %}

{% block content %}

    <!-- Main bar -->
    <div class="mainbar">

        <!-- Page heading -->
        <div class="page-head">
            <h2 class="pull-left"><i class="fa fa-home"></i> Commission Junction</h2>

            <div class="clearfix"></div>

        </div>
        <!-- Page heading ends -->


        <!-- Matter -->

        <div class="matter">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">

                        {{ flash['upload-xml-msg'] }}
                        {{ flash['inserted-items-msg']}}

                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">Add Home Page Content</div>
                                <div class="widget-icons pull-right">
                                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                </div>
                                <div class="clearfix"></div>
                            </div>

                            <div class="widget-content">
                                <div class="padd">

                                   <form class="ajax-homepage form" action="{{ siteUrl('/admin-area/homepage') }}" method ="post">
                                        <textarea id ="homepage" name ="homepage" class="form-control" >{% if homepage.body %}{{  homepage.body }}{% endif %}</textarea>
                                        <input type="hidden" name="token" value="{{ token }}">
                                        <br/>
                                        <input type="submit" value ="Submit" name ="submit_homepage" class="btn btn-sm btn-info">

                                       <p><div id="response"></div></p>
                                    </form>

                                        <!--</form>-->

                                </div>
                            </div>
                        </div>

                    </div><!-- / .col-md-12 -->
                </div>
            </div>
        </div>

        <!-- Matter ends -->

    </div>

    <!-- Mainbar ends -->
    <div class="clearfix"></div>

    </div>
    <!-- Content ends -->

{% endblock %}


{% block sidebar %}
    {% include "admin/layout/side.twig" %}
{% endblock  %}