{% extends "admin/layout/master.twig" %}

{% block content %}

    <!-- Main bar -->
    <div class="mainbar">

        <!-- Page heading -->
        <div class="page-head">
            <h2 class="pull-left"><i class="fa fa-home"></i> Users</h2>

            <div class="clearfix"></div>

        </div>
        <!-- Page heading ends -->


        <!-- Matter -->

        <div class="matter">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">

                        {{ error_msg }}

                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">Edit User</div>
                                <div class="widget-icons pull-right">
                                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                    <!--<a href="#" class="wclose"><i class="fa fa-times"></i></a>-->
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="widget-content">
                                <div class="padd">


                                    <!-- Form -->
                                    <form id="add-item" role="form" class="form-horizontal" action="{{ siteUrl('/admin-area/user') }}/{{ user.id }}/edit" method ="post">
                                        <input type="hidden" name="_METHOD" value="PUT"/>

                                        {% set userArr = user.toArray() %}

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Select group:</label>
                                            <div class="col-lg-5">

                                                <select id="user_group" name ="user_group" class="form-control">
                                                    <option value ="User" {% if group_name == 'User' %}{{ selected }}{% endif %}>User</option>
                                                    <option value ="Staff" {% if group_name == 'Staff' %}{{ selected }}{% endif %}>Staff</option>
                                                    <option value ="Manager" {% if group_name == 'Manager' %}{{ selected }}{% endif %}>Manager</option>
                                                </select>

                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Activate User:</label>
                                            <div class="col-lg-5">

                                                <select id="activated" name ="activated" class="form-control">
                                                    <option value ="1" {% if userArr.activated == 1 %}{{ selected }}{% endif %}>Yes</option>
                                                    <option value ="0" {% if userArr.activated == 0 %}{{ selected }}{% endif %}>No</option>
                                                </select>

                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">First Name:</label>
                                            <div class="col-lg-5">
                                                <input type="text" name="first_name" class="form-control" value="{% if userArr.first_name %}{{ userArr.first_name }}{% endif %}">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Last Name:</label>
                                            <div class="col-lg-5">
                                                <input type="text" name="last_name" class="form-control" value="{% if userArr.last_name %}{{ userArr.last_name }}{% endif %}">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Email (login):</label>
                                            <div class="col-lg-5">
                                                <input type="text" name ="email" class="form-control" value="{% if userArr.email %}{{ userArr.email }}{% endif %}">
                                                {{ email_error }}
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Username (display):</label>
                                            <div class="col-lg-5">
                                                <input type="text" name ="username" class="form-control" value="{% if userArr.username %}{{ userArr.username }}{% endif %}">
                                                {{ username_error }}
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Password:</label>
                                            <div class="col-lg-5">
                                                <input type="password" name="password"  class="form-control" value="{% if userArr.password %}{{ userArr.password }}{% endif %}">
                                                   {{ password_error }}
                                                <input type="hidden" name="id" value="{% if userArr.id %}{{ userArr.id }}{% endif %}" />

                                                <input type="hidden" name="token" value="{{ token }}">
                                                <p><input type="submit" value ="Update" name ="update_user_submit" class="btn btn-primary"></p>

                                            </div>
                                        </div>

                                    </form>
                                    <!-- End form -->

                                </div>
                                <div class="widget-foot">

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- Matter ends -->

    </div>

    <!-- Mainbar ends -->
    <div class="clearfix"></div>

    </div>
    <!-- Content ends -->

{% endblock %}


{% block sidebar %}
    {% include "admin/layout/side.twig" %}
{% endblock  %}