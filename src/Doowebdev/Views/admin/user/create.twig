{% extends "admin/layout/master.twig" %}

{% block content %}

    <!-- Main bar -->
    <div class="mainbar">

        <!-- Page heading -->
        <div class="page-head">
            <h2 class="pull-left"><i class="fa fa-home"></i> Users</h2>

            <div class="clearfix"></div>

        </div>
        <!-- Page heading ends -->


        <!-- Matter -->

        <div class="matter">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">

                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">Add a User</div>
                                <div class="widget-icons pull-right">
                                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                    <!--<a href="#" class="wclose"><i class="fa fa-times"></i></a>-->
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="widget-content">
                                <div class="padd">
                                    <!-- Content -->

                                    <!-- Form -->
                                    <form id="add-item" role="form" class="form-horizontal admin-ajax" action="{{ siteUrl('/admin-area/user') }}" method ="post">

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Select group:</label>
                                            <div class="col-lg-5">

                                                <select id="user_group" name ="user_group" class="form-control">
                                                    <option value ="User" {% if user_group == 'User' %}{{ selected }}{% endif %}>User</option>
                                                    <option value ="Staff" {% if user_group == 'Staff' %}{{ selected }}{% endif %}>Staff</option>
                                                    <option value ="Manager" {% if user_group == 'Manager' %}{{ selected }}{% endif %}>Manager</option>
                                                </select>

                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">First Name:</label>
                                            <div class="col-lg-5">
                                                <input type="text" name="first_name" class="form-control" value="{{ first_name }}">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Last Name:</label>
                                            <div class="col-lg-5">
                                                <input type="text" name="last_name" class="form-control" value="{{ last_name }}">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Email (login):</label>
                                            <div class="col-lg-5">
                                                <input type="email" name ="email" class="form-control" value="{{ email }}">
                                                {{ email_error }}
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Username (display):</label>
                                            <div class="col-lg-5">
                                                <input type="text" name ="username" class="form-control" value="{{ username }}">
                                                {{ username_error }}
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-lg-2 control-label">Password:</label>
                                            <div class="col-lg-5">
                                                <input type="password" name="password"  class="form-control" value="">
                                                {{ password_error }}

                                                <input type="hidden" name="token" value="{{ token }}">
                                                <p><input type="submit" value ="Add" name ="post-add-user_submit" class="btn btn-primary"></p>

                                            </div>
                                        </div>

                                    </form>
                                    <!-- End form -->


                                    <!-- End Content -->

                                </div>
                                <div class="widget-foot">
                                    <!-- Footer goes here -->
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- Matter ends -->

    </div>

    <!-- Mainbar ends -->
    <div class="clearfix"></div>

    </div>
    <!-- Content ends -->

{% endblock %}


{% block sidebar %}
    {% include "admin/layout/side.twig" %}
{% endblock  %}
