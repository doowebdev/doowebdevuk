{% extends "admin/layout/master.twig" %}

{% block content %}

    <!-- Main bar -->
    <div class="mainbar">

        <!-- Page heading -->
        <div class="page-head">
            <h2 class="pull-left"><i class="fa fa-home"></i> Pages</h2>

            <div class="clearfix"></div>

        </div>
        <!-- Page heading ends -->


        <!-- Matter -->

        <div class="matter">
            <div class="container">
                <div class="row">

                    <!-- .col-md-8 - main text area -->
                    <div class="col-md-8">

                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">Edit Page</div>
                                <div class="widget-icons pull-right">
                                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="widget-content">
                                <div class="padd">


                                    <form class="form" action="{{ siteUrl('/admin-area/page') }}/{{ page.id }}" method ="post">
                                        <input type="hidden" name="_METHOD" value="PUT"/>
                                        <input type="text" class="form-control col-lg-8" placeholder="Enter Title" name ="pageTitle" value ="{% if page.title %}{{ page.title }}{% endif %}">

                                        <br /><br />

                                        <div class="text-area">
                                            <!-- Add the "cleditor" to textarea to add CLeditor -->
                                            <textarea id ="description" name ="editor1" class="form-control" >{% if page.content %}{{page.content }}{% endif %}</textarea>

                                        </div>

                                        <div class="clearfix"></div>

                                        <!--</form>-->

                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- / .col-md-8 - main text area -->

                    <!-- Side-->
                    <div class="col-md-4">

                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">Details</div>
                                <div class="widget-icons pull-right">
                                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="widget-content">
                                <div class="padd">

                                    <!--<form class="form">-->

                                    <h6><strong>Slug</strong></h6>
                                    <input class="form-control col-lg-12" type="text" name ="slug" value ="{% if page.slug %}{{ page.slug }}{% endif %}">
                                    <h6><strong>Order</strong></h6>
                                    <input class="form-control col-lg-12" type="text" name ="order" value ="{% if page.order %}{{ page.order }}{% endif %}">


                                    <div class="clearfix"></div>

                                    <p> <div class="buttons">
                                        <input type="hidden" name="token" value="{{ token }}">
                                        <input type="submit" value ="Update" name ="edit_page_submit" class="btn btn-sm btn-info">
                                    </div>
                                    </p>

                                    </form>

                                </div>

                            </div>
                        </div>

                    </div>

                    <!-- / .cl-md-4 - End side-->

                </div>
            </div>
        </div>

        <!-- Matter ends -->

    </div>

    <!-- Mainbar ends -->
    <div class="clearfix"></div>

    </div>
    <!-- Content ends -->

{% endblock %}


{% block sidebar %}
    {% include "admin/layout/side.twig" %}
{% endblock  %}
