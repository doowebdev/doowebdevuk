{% extends "admin/layout/master.twig" %}

{% block content %}

    <!-- Main bar -->
    <div class="mainbar">

        <!-- Page heading -->
        <div class="page-head">
            <h2 class="pull-left"><i class="fa fa-home"></i> Videos</h2>

            <div class="clearfix"></div>

        </div>
        <!-- Page heading ends -->

        {{ flash['category_created'] }}
        {{ flash['deleted'] }}

        <!-- Matter -->

        <div class="matter">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">

                        <b>{{ flash['category-created'] }}</b>

                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">View Categories</div>

                                <div class="widget-icons pull-right">
                                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                    <!--<a href="#" class="wclose"><i class="fa fa-times"></i></a>-->
                                </div>

                                <div class="clearfix"></div>
                            </div>
                            <div class="widget-content">
                                <div class="padd">


                                    <!-- Table Page -->
                                    <div class="page-tables">
                                        <!-- Table -->
                                        <div class="table-responsive">
                                            <table cellpadding="0" cellspacing="0" border="0" id="data-table" width="100%">
                                                <thead>
                                                <tr>
                                                    <th width="150">ID</th>
                                                    <th width="150">name</th>
                                                    <th width="150"> </th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% if categories %}
                                                {% for cat in categories %}
                                                <tr>
                                                    <td>{{ cat.id }}</td>
                                                    <td>{{ cat.category }}</td>
                                                    <td><a href="{{ siteUrl('/admin-area/category') }}/{{ cat.id }}/delete" onclick="return confirm('Are you sure?')" class=""><i class="fa fa-trash-o"></i> Delete</a></td>
                                                </tr>
                                                {% endfor %}
                                                {% else %}
                                                <p>No categories to show</p>
                                                {% endif %}

                                                </tbody>
                                            </table>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                    <!-- End table -->

                                </div>
                                <div class="widget-foot">
                                    <!-- Footer goes here -->
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- Matter ends -->

    </div>

    <!-- Mainbar ends -->
    <div class="clearfix"></div>

    </div>
    <!-- Content ends -->

{% endblock %}


{% block sidebar %}
    {% include "admin/layout/side.twig" %}
{% endblock  %}