{% extends "admin/layout/master.twig" %}

{% block content %}

    <!-- Main bar -->
    <div class="mainbar">

        <!-- Page heading -->
        <div class="page-head">
            <h2 class="pull-left"><i class="fa fa-home"></i> Videos</h2>

            <div class="clearfix"></div>

        </div>
        <!-- Page heading ends -->



        <!-- Matter -->

        <div class="matter">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">

                        {{ flash['item-created'] }}

                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">Create a Video</div>
                                <div class="widget-icons pull-right">
                                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="widget-content">
                                <div class="padd">

                                    <form class="form" action="{{ siteUrl('/admin-area/item') }}" method ="post">
                                        <label>Title:</label>
                                        <input type="text" class="form-control" name ="title" value ="{{ title }}">
                                       {{ title_errors }}
                                        <br /><br />

                                        <label>Description:</label>
                                        <div class="text-area">
                                            <!-- Add the "cleditor" to textarea to add CLeditor -->
                                            <!--<textarea class="cleditor" name="input"></textarea>-->
                                            <textarea class="form-control" name ="description" cols="30" rows="10">{{ description }}</textarea>
                                            {{ description_errors }}
                                        </div>

                                        <div class="form-group">
                                            <label>Video URL:</label>
                                            <input type="text" class="form-control" name ="video_url" value ="{{ video_url }}">
                                            {{ video_url_errors }}
                                        </div>

                                        <div class="clearfix"></div>

                                        <!--</form>-->

                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- post sidebar -->

                    <div class="col-md-4">

                        <div class="widget">
                            <div class="widget-head">
                                <div class="pull-left">Details</div>
                                <div class="widget-icons pull-right">
                                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="widget-content">
                                <div class="padd">

                                    <!-- <form class="form">-->

                                    <div class="form-group">
                                        <label>Submitted by:</label>
                                        <input type="text" class="form-control" name ="name" value ="{{ current_user.username }}" disabled>
                                    </div>

                                    <div class="form-group">
                                        <label>Status:</label>
                                        <select class="form-control" name ="status">
                                            <option value="pending">pending</option>
                                            <option value="active">active</option>
                                            <option value="inactive">inactive</option>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label>Category:</label>
                                        {{ category_errors }}
                                        {% if categories is empty %}
                                            <select id="category" name ="category" class="form-control">
                                               <option><b> Create a category before submitting a video</b></option>
                                            </select>
                                        {% else %}
                                            <select id="category" name ="category" class="form-control">
                                                {% for cat in categories %}
                                                    <option value ="{{ cat.category }}">{{ cat.category }}</option>
                                                {% endfor %}
                                            </select>
                                         {% endif %}
                                    </div>

                                    <hr />

                                    <div class="clearfix"></div>

                                    <p><div class="buttons">
                                        <input type="submit" value ="Publish" name ="submit-item" class="btn btn-sm btn-info">
                                    </div></p>

                                    <input type="hidden" name="token" value="{{ token }}">
                                    </form>
                                    <p> <div id="response"></div></p>
                                </div>
                                <div class="widget-foot">
                                    <!-- Footer goes here -->
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>

        <!-- Matter ends -->

    </div>

    <!-- Mainbar ends -->
    <div class="clearfix"></div>

    </div>
    <!-- Content ends -->

{% endblock %}


{% block sidebar %}
    {% include "admin/layout/side.twig" %}
{% endblock  %}
